
@{
    ViewBag.Title = "Contactcls";
}


<br /><br /><br />

<div class="container">
    <div class="row">

        <div class="col-md-12">
            <form method="post" action="SendMsg">

                <div class="form-group-lg">
                    <label>Enter Name </label>
                    <input type="text" class="form-control" name="txtName" id="txtName" />

                </div>

                <div class="form-group-lg">
                    <label>Enter Contact </label>
                    <input type="text" class="form-control" name="txtContact" id="txtContact" />

                </div>

                <div class="form-group-lg">
                    <label>Enter Subject </label>
                    <input type="text" class="form-control" name="txtSubject" id="txtSubject" />

                </div>


                <div class="form-group-lg">
                    <label>Enter Message </label>
                    <input type="text" class="form-control" name="txtMsg" id="txtMsg" />

                </div>
                <br />

                <input type="submit" value="Send Message" class="btn btn-warning" />
            </form>
        </div>


    </div>


</div>

